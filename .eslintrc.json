{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "max-len": [
            "error",
            {
                "code": 120,
                "tabWidth": 4
            }
        ],
        "indent": [
            "error",
            4
        ]
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    }
}

